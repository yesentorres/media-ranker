<section class="spotlight">
  <h2 class="spotlight__header">
    <span class="spotlight__header--prefix"> Media Spotlight: </span>
     <%= link_to "#{Work.spotlight.title}", work_path(Work.spotlight.id), class: "spotlight__link-to" %> by <%= Work.spotlight.creator%>
  </h2>
  <p class="spotlight__description"> 
     <%= Work.spotlight.votes.length%> votes - <%= Work.spotlight.description%>
  </p>
</section>

<hr class="root__hr" />

<% works = Work.all%>
<h1>Top Albums</h1>

<% albums = works.select { |work| work.category == "album" }%>
<% if albums.length == 0 %>
  <p> No albums added yet </p>
<% end %>
<% albums_sorted = albums.sort_by {|album| -album.votes.count}%>

<% albums_sorted.each do |album|%>
  <p><%=link_to "#{album.title}", work_path(album.id)%> by <%=album.creator%></p>
  <p><%=album.votes.length%> votes</p>
<% end %>

