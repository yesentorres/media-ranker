<% if @invalid_vote_message %>
  <ul>
    <% @invalid_vote_message.each do |column, message| %>
      <li>
        <strong><%= column %></strong>: <%= message.first %>
      </li>
    <% end %>
  </ul>
<% end %>

<h2><%= @work.title %> </h2>

<p>Created by: <%= @work.creator %></p>
<p>Published: <%= @work.publication_year %></p>
<p><%= @work.description %></p>

<%= link_to "Edit", edit_work_path%>
<%= link_to "Delete", work_path(@work), method: :delete , data: {confirm: "Are you sure?"}%>
<%= link_to "Upvote", upvote_path(@work.id), method: :post %>