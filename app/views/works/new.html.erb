<h2>Create New Work</h2>

<% if @work.errors.any? %>
  <p>Oops! Something went wrong with adding a new work:</p>
  <ul>
    <% @work.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> field <%= message %>
      </li>
    <% end %>
  </ul>
  <p>Please try again: </p>
<% end %>

<%= form_with model: @work do |f| %>

  <%= f.label :category %>
      <%= f.select :category, ['album', 'book', 'movie'] %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :creator %>
  <%= f.text_field :creator %>

  <%= f.label :publication_year %>
  <%= f.text_field :publication_year %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Create Work"%>
<% end %>