 <% if @user.errors.any? %>
  <ul>
    <% @user.errors.each do |column, message| %>
      <li>
        <strong><%= column %></strong>: <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

 <%= form_with model: @user, class: 'login__form', url: login_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.submit "Log In" %>
<% end %>